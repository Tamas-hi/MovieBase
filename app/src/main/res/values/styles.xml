<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">20dp</item>
        <item name="colorPrimary">#008577</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ca6200</item>
        <item name="android:textColorHint">#8A000000</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/black</item>
    </style>

    <style name="LoadingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/welcomescreen</item>
    </style>

</resources>
