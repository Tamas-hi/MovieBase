<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">20dp</item>
        <item name="colorPrimary">#008577</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ca6200</item>
        <item name="android:textColorHint">#8A000000</item>
        <item name="android:itemBackground">@color/black</item>
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="LoadingTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/welcomescreen</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/color_toolbar</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
    <item name="android:textColorPrimary">@color/orange</item>
        <item name="android:textColorSecondary">@color/orange</item>
        <item name="actionMenuTextColor">@color/orange</item>
    </style>
</resources>
