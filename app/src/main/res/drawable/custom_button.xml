<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFE4B5"
                android:endColor="#FFFF00"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#D3D3D3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FF7F50"
                android:startColor="#FFA500"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#DCDCDC" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#B0E0E6"
                android:startColor="#87CEEB"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#B0C4DE" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>